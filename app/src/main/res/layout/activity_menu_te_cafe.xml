<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menus.MenuTeCafe">

    <RelativeLayout
        android:id="@+id/menbebidas500"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:clipToOutline="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp" />

    <TextView
        android:id="@+id/casino_univ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bree_serif"
        android:textSize="24sp"
        android:text="@string/casino_universidad"
        android:textAppearance="@style/elige_una_o"
        android:gravity="bottom"
        />
    <View
        android:id="@+id/image_6"
        android:layout_width="104dp"
        android:layout_height="59dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/logo"
        />


    <TableLayout
        android:id="@+id/tabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/casino_univ"
        android:layout_marginTop="30dp">

        <!-- Fila 1 -->
        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="0"
                android:background="@color/grisoscuro"
                android:fontFamily="@font/bree_serif"
                android:gravity="center"
                android:padding="6dp"
                android:text="Cantidad"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:layout_width="137dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="0"
                android:background="@color/grisoscuro"
                android:fontFamily="@font/bree_serif"
                android:gravity="center"
                android:padding="6dp"
                android:text="Producto"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:background="@color/grisoscuro"
                android:fontFamily="@font/bree_serif"
                android:gravity="center"
                android:padding="6dp"
                android:text="Precio"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </TableRow>

    </TableLayout>

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="362dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabla">

        <ListView
            android:id="@+id/lvTeCafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIniciarSesion"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="130dp"
        android:layout_marginStart="220dp"
        android:background="@drawable/redondo"
        android:text="Agregar \nproducto"
        android:textColor="@color/white"
        android:fontFamily="@font/bree_serif"
        android:textSize="16sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>